<div class="container">
    <h1>Users</h1>
    <hr>
    <h2>Add Data</h2>

    <form class="container col-sm-12" method="POST">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">First Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputFirstName" name="firstname" placeholder="Firstname">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputLastName" name="lastname" placeholder="Lastname">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Position</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio">
                    <input type="radio" id="manager" name="position" class="custom-control-input" value="Manager">
                    <label class="custom-control-label" for="manager">Manager</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="softwaredev" name="position" class="custom-control-input" value="Software Developer">
                    <label class="custom-control-label" for="softwaredev">Software Developer</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="qa" name="position" class="custom-control-input" value="Quality Assurance">
                    <label class="custom-control-label" for="qa">Quality Assurance</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Job Type</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio">
                    <input type="radio" id="jobtype1" name="jobtype" class="custom-control-input" value="Full Time">
                    <label class="custom-control-label" for="jobtype1">Full Time</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="jobtype2" name="jobtype" class="custom-control-input" value="Part Time">
                    <label class="custom-control-label" for="jobtype2">Part Time</label>
                </div>
            </div>
        </div>

        <br>

        <div class="form-group row">
            <div>
                <button type="submit" class="btn btn-outline-success">Save</button>
                <a href="/users" class="btn btn-outline-warning">Cancel</a>
            </div>
        </div>
    </form>
</div>

