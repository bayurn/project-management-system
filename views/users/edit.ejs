<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<br>

<div class="container">
    <h1>Users</h1>
    <hr>
    <h2>Edit Data</h2>

    <form class="container col-sm-12" method="POST">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">First Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputFirstName" name="editFirstname" placeholder="Firstname"
                    value="<%= result.firstname %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputLastName" name="editLastname" placeholder="Lastname"
                    value="<%= result.lastname %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail" name="editEmail" placeholder="Email"
                    value="<%= result.email %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="editPassword"
                    placeholder="Password" value="<%= result.password %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Position</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio">
                    <input type="radio" id="manager" name="editPosition" class="custom-control-input" value="Manager"
                        <%= result.position == 'Manager' ? ' checked' : '' %>>
                    <label class="custom-control-label" for="manager">Manager</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="softwaredev" name="editPosition" class="custom-control-input"
                        value="Software Developer" <%= result.position == 'Software Developer' ? ' checked' : '' %>>
                    <label class="custom-control-label" for="softwaredev">Software Developer</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="qa" name="editPosition" class="custom-control-input" value="Quality Assurance"
                        <%= result.position == 'Quality Assurance' ? ' checked' : '' %>>
                    <label class="custom-control-label" for="qa">Quality Assurance</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Job Type</label>
            <div class="col-sm-10">
                <div class="custom-control custom-radio">
                    <input type="radio" id="jobtype1" name="editJobtype" class="custom-control-input" value="Full Time"
                        <%= result.isfulltime == true ? ' checked' : '' %>>
                    <label class="custom-control-label" for="jobtype1">Full Time</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="jobtype2" name="editJobtype" class="custom-control-input" value="Part Time"
                        <%= result.isfulltime == false ? ' checked' : '' %>>
                    <label class="custom-control-label" for="jobtype2">Part Time</label>
                </div>
            </div>
        </div>

        <br>

        <div class="form-group row">
            <div>
                <button type="submit" class="btn btn-outline-success">Update</button>
                <a href="/users" role="button" class="btn btn-outline-warning">Cancel</a>
            </div>
        </div>
    </form>
</div>